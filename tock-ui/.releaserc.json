{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
        [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "../dist-artifacts/windows-artifacts/**/*.exe",
            "label": "Windows Installer ${nextRelease.version}"
          },
          {
            "path": "../dist-artifacts/windows-artifacts/**/*.msi",
            "label": "Windows MSI ${nextRelease.version}"
          },
          {
            "path": "../dist-artifacts/linux-artifacts/**/*.AppImage",
            "label": "Linux AppImage ${nextRelease.version}"
          },
          {
            "path": "../dist-artifacts/linux-artifacts/**/*.deb",
            "label": "Linux DEB ${nextRelease.version}"
          },
          {
            "path": "../dist-artifacts/linux-artifacts/**/*.rpm",
            "label": "Linux RPM ${nextRelease.version}"
          },
          {
            "path": "../dist-artifacts/macos-artifacts/**/*.dmg",
            "label": "macOS DMG ${nextRelease.version}"
          },
          {
            "path": "../update-json/latest.json",
            "label": "Auto-update manifest"
          }
        ]
      }
    ]
  ]
}
